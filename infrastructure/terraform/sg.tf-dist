resource "aws_security_group" "allow_ssh_http" {
	name = "allow_ssh_http"
  description = "Allow HTTP and SSH traffic inbound.  Allow all traffic outbound."

  ingress {
      from_port = 80
      to_port = 80
      protocol = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
      from_port = 22
      to_port = 22
      protocol = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
      from_port = 0
      to_port = 0
      protocol = "-1"
      cidr_blocks = ["0.0.0.0/0"]
  }	
}
